[core]
	editor = vim -c \"set fenc=utf-8\"
	excludesFile = /Users/nakaharad/.gitignore_global
[color]
	ui = auto
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:\\\"%h %ad | %s%d [%an]\\\" --graph --date=short
    root = rev-parse --show-toplevel
    vimdiff = difftool --tool=vimdiff --no-prompt
